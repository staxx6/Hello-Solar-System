    {{> article_header title="Positioning" id="positioning" lang="CSS"}}

    {{{ startCode lang="css" text="Example: position=\"static relative absolute\" and z-index"}}}
    #ex1-positioning-wrapper {
        position: relative;
    }
    .ex1-positioning {
        background-color: grey;
        color: #FFC338;
        border: 2px solid;
        margin: 5px;
        height: 40px;
        width: 250px;
    }
    #ex1-positioning-box2 {
        position: static;
        top: 10px; /* Nothing happen - static is standard setting */
    }
    #ex1-positioning-box3 {
        position: relative;
        left: 55px;
        top: 15px;
    }
    #ex1-positioning-box5 {
        position: absolute;
        left: 300px;
        top: 150px;
    }
    #ex1-positioning-box6 {
        position: relative;
        z-index: 1;
    }
    #ex1-positioning-box7 {
        position: relative;
        left: 55px;
        top: -15px;
        z-index: 0;
    }
    {{{ endCode }}}

